<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <Button
        android:id="@+id/btn_permissions"
        style="@style/ButtonStyle"
        android:text="@string/btn_permissions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_softwareCapabilities"
        style="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:text="@string/btn_swcapabilities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_permissions" />

    <Button
        android:id="@+id/btn_product_initialization"
        style="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:text="@string/btn_product_initialization"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_softwareCapabilities" />

    <Button
        android:id="@+id/btn_smartpos_reboot"
        style="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:text="@string/btn_smartpos_reboot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_product_initialization" />

    <Button
        android:id="@+id/btn_smartpos_start_onboarding"
        style="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:text="@string/btn_smartpos_start_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_smartpos_reboot" />

</android.support.constraint.ConstraintLayout>