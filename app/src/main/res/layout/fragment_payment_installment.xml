<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/option_line">

    <TextView
        android:id="@+id/tvInstallmentAmount"
        android:layout_width="@dimen/option_line"
        android:layout_height="0dp"
        android:gravity="right|center_vertical"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/lnInstallment"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_margin="@dimen/keyboard_button_margin"
        app:layout_constraintLeft_toRightOf="@+id/tvInstallmentAmount"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvInstallmentValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|center_vertical"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:text="R$ 10,00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lnInstallment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>